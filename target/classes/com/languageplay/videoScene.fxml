<?xml version="1.0" encoding="UTF-8"?>

<!-- switch to this scene once subtitle file and video file were opened -->
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>



<BorderPane fx:id="mainVideoContainer"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.languageplay.VideoController">


  <top>
    <ToolBar fx:id="topSection" styleClass="toolbarContainer">
      <Region fx:id="toolbarSpacer" HBox.hgrow="ALWAYS" styleClass="toolbarContainer" />
        <HBox fx:id="toolBarButtonsContainer">
          <Button styleClass="toolBarButton" fx:id="minimize_button" text="-" />
          <Button styleClass="toolBarButton" fx:id="fullScreenButton" text="full" />
          <Button styleClass="toolBarButton" fx:id="close_button" text="X"/>
        </HBox>
    </ToolBar>
  </top>

  <center>
    <StackPane fx:id="videoWrapper">
    </StackPane>
  </center>

  <bottom>
    <HBox styleClass="bottomContainer">
      <Button styleClass="rewindButton" text="rewind" />
      <Button styleClass="pauseButton" text="Pause Button" />
      <Button styleClass="fastForward" text=">>" />
    </HBox>
  </bottom>

</BorderPane>


