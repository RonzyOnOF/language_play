<?xml version="1.0" encoding="UTF-8"?>

<!-- switch to this scene once subtitle file and video file were opened -->
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>




<BorderPane fx:id="mainVideoContainer"  xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.languageplay.videoController">


  <top>
    <ToolBar fx:id="topSection">
      <Region fx:id="toolbarSpacer" HBox.hgrow="ALWAYS" />
        <HBox fx:id="toolBarButtonsContainer">
          <Button styleClass="toolBarButton" fx:id="minimize_button" text="-" />
          <Button styleClass="toolBarButton" text="full" />
          <Button styleClass="toolBarButton" fx:id="close_button" text="X"/>
        </HBox>
    </ToolBar>
  </top>

  <center>
    <Label text="Video" />
  </center>

  <bottom>
  </bottom>

</BorderPane>


